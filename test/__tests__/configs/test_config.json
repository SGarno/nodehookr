{
	"test": true,
	"pathcheck": "Valid",
	"port": "3820",

	"log": {
		"requests": { "enabled": true, "console": false, "path": "./test/__tests__/logs" },
		"service": { "enabled": true, "console": false, "path": "./test/__tests__/logs" },
		"router": { "enabled": true, "path": "./test/__tests__/logs" },
		"plugins": { "eabled": true, "path": "./test/__tests__/logs" }
	},

	"mailer": {
		"host": "smtp.office365.com",
		"secure": false,
		"port": 587,
		"debug": false,
		"auth": {
			"user": "not real",
			"pass": "not real"
		},
		"templates": {
			"sample": {
				"from": "user@mail.com",
				"file": "./examples/templates/sample-email-template.html",
				"subject": "NodeHookR Test"
			}
		},
		"apperrors": {
			"to": "user@mail.com",
			"from": "sender@mail.com",
			"prefix": "Eror with my app: "
		}
	},

	"plugins": [
		{
			"name": "sample",
			"path": "./examples/plugins/basic-plugin.js",
			"routes": [
				{ "match": "/TestFN2", "method": "POST", "callback": "myFunction2" },
				{
					"match": "/(((Test)*Route/1)|(Route/1/Test))$",
					"method": "GET",
					"callback": "myFunction1",
					"params": { "configParam": "Config from Route #1" }
				},
				{
					"match": "/(((Test)*Route/2)|(Route/2/Test))$",
					"method": "GET",
					"callback": "myFunction1",
					"params": { "configParam": "Config From Route #2" }
				},
				{ "match": "/sendmail", "method": "get", "callback": "sendmail" }
			]
		}
	],

	"userdata": {
		"samples": [
			"This is some sample data you can access from the config file",
			"It can be accessed by each plugin"
		],
		"text": "You can use any type of object"
	}
}
